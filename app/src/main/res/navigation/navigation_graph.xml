<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.myfreehealthtracker.Fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/healthFragment"
        android:name="com.example.myfreehealthtracker.Fragments.HealthFragment"
        android:label="fragment_health"
        tools:layout="@layout/fragment_health" >
        <action
            android:id="@+id/action_health_fragment_new_meal"
            app:destination="@id/newMealFragment" />
    </fragment>
    <fragment
        android:id="@+id/sportFragment"
        android:name="com.example.myfreehealthtracker.Fragments.SportFragment"
        android:label="fragment_sport"
        tools:layout="@layout/fragment_sport" />
    <fragment
        android:id="@+id/newMealFragment"
        android:name="com.example.myfreehealthtracker.NewMealFragment"
        android:label="fragment_new_meal"
        tools:layout="@layout/fragment_new_meal" >
        <action
            android:id="@+id/action_confirm_new_meal"
            app:destination="@id/healthFragment" />
    </fragment>
</navigation>